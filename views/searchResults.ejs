<%- include ("partials/header.ejs") %>

<div class="row">
  <div class="col-md-6">
    <h2>Showing results for: <%= query %></h2>
  </div>
  <div class="col-md-6 recipes-page-search">
    <form action="/posts/search" method="post">
      <input class="form-control form-control-lg" type="text" name="searchQuery" placeholder="Search all recipes...">
      <button class="btn btn-lg btn-primary" type="submit" name="submit">Search</button>
    </form>
  </div>
</div>
<div class="row">
<% recipes.forEach(function(element){ %>
<div class="col-lg-3 col-md-6 mb-3">
  <a href="/posts/<%= element._id %>">
  <div class="post-img" style="background-image: url(/uploads/<%= element.imageFileName %>)">
    <div class="black-box">
      <h3><%= element.title %></h3>
      <br>
      <p><%= element.shortDesc %></p>
    </div>
  </div>
  </a>
</div>
 <% }) %>

</div>






<%- include ("partials/footer.ejs") %>
