<%- include("partials/header.ejs") %>

<div class="row">
  <div class="col-md-8">
    <h2>Contact me</h2>
    <p>This blog is built for practice purposes, and will most likely not be updated frequently,
       if you have any questions at all, feel free to contact me.</p>

    <form action="/contact" method="post">
      <label for="name">Your Name</label>
      <input class="form-control" type="text" name="name">
      <label for="email">Your Email address</label>
      <input class="form-control" type="email" name="email">
      <label for="subject">Subject</label>
      <input class="form-control" type="text" name="subject">
      <label for="message">Message</label>
      <textarea class="form-control" name="message" rows="8" cols="80"></textarea>
       <br>
      <button class="btn btn-lg btn-primary" type="submit" name="submit">Send Message</button>
    </form>

  </div>
  <div class="col-md-4">
   <div class="contact-img">
    <div class="black-box">
      <h3 class="contact-img-caption">Contact</h3>
    </div>
   </div>
  </div>
</div>


